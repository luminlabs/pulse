
<%= form_for @lecture do |f| %>
  <%= f.label :title , :class => "form-element" %>:
  <%= f.text_field :title, :autofocus => true, :class => "form-element" %>
  
  <br>

  <%= f.label :active , :class => "form-element" %>:
  <%= f.check_box :active, :autofocus => true, :class => "form-element" %>
  
  <br>
  <%= f.submit :class =>"button black" %>
<% end %>
  
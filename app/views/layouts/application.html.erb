<!DOCTYPE html>
<html>

<head>
  <title>Pulse</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="row" id="navbar">
    <div class="large-3 columns" >
      <h1><img alt="Pulse Logo" id="logo" src="/assets/pulse-logo.png"  /></h1>
    </div>
    <div class="large-9 columns" id="navbar">
      <ul class="inline-list right">
        
           <% if current_user %>
              <li class="menu-item">Hello <%= current_user.name%>!</li>
              <li class="menu-item"><%= link_to "Log out", destroy_user_session_path, :method => 'delete' %></li>
            <% else %>
              <li class="menu-item"><%= link_to "Sign up", new_user_registration_path %> </li>  
              <li class="menu-item"><%= link_to "Log in", new_user_session_path %></li>
            <% end %>
         
      </ul>
    </div>
  </div>
  <div class="row" id="alertbar">
    <div class="large-12 columns">
     <p class="notice" align-text="centered"><%= notice %></p>
       <p class="alert" align-text="centered"><%= alert %></p>
 </div>
 </div>

<%= yield %>
 <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; GA West.</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">

          </ul>
        </div>
      </div>
    </div> 
  </footer>
</body>
</html>
